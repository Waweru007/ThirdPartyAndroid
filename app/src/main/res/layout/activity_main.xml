<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textSize="12sp"
        android:inputType="textPersonName"
        app:met_baseColor="#f20833"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="20"
        app:met_primaryColor="#b40b0b"
        app:met_singleLineEllipsis="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fist Name"
        android:textSize="12sp"
        android:inputType="textEmailAddress"
        app:met_baseColor="#d61e1e"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="20"
        app:met_textColorHint="#f11111"
        app:met_primaryColor="#e91010"
        app:met_singleLineEllipsis="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:textSize="12sp"
        android:inputType="phone"
        app:met_baseColor="#d61e1e"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="20"
        app:met_textColorHint="#f11111"
        app:met_primaryColor="#e91010"
        app:met_singleLineEllipsis="true" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_marginTop="12dp"
        android:id="@+id/btn_spotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#46ed04"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="12dp"
        fancy:fb_text="@string/submit"
        fancy:fb_textColor="#FFFFFF" />

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profile_image"
        android:paddingTop="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/model"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <com.daasuu.cat.CountAnimationTextView
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:id="@+id/count_animation_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

<!--external fonts-->


</LinearLayout>
